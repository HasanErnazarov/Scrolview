<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="Kelajak kompaniyasi"
                android:textSize="50sp"
                android:textColor="#ED0000"
                android:fontFamily="@font/android_script"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Write something here"
                android:padding="10dp"
                android:background="@drawable/edittex_new"
                android:layout_marginTop="20dp"
                android:layout_height="55dp"/>

            <EditText
                android:layout_width="match_parent"
                android:hint="Write something here"
                android:padding="10dp"
                android:background="@drawable/edit_bottom_stil"
                android:layout_marginTop="20dp"
                android:layout_height="55dp"/>

            <ImageView
                android:layout_width="200dp"
                android:src="@drawable/ic_lollogo"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                app:cardElevation="30dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_lollogo" />
            </androidx.cardview.widget.CardView>


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lollogo"
                app:shapeAppearanceOverlay="@style/circcle"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp" />

            <EditText
                android:layout_width="match_parent"
                android:hint="Write something here"
                android:padding="10dp"
                android:background="@drawable/new_edit"
                android:layout_marginTop="20dp"
                android:layout_height="55dp"/>

            <EditText
                android:layout_width="match_parent"
                android:hint="Write something here"
                android:padding="10dp"
                android:background="@drawable/etit_lineat"
                android:layout_marginTop="20dp"
                android:layout_height="55dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/gradient"
                android:textSize="26sp"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:textAllCaps="false"
                app:backgroundTint="@null"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bottom_ic"
                android:textSize="26sp"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:textAllCaps="false"
                app:backgroundTint="@null"/>


            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/botton_new"
                android:layout_marginTop="20dp"
                android:text="Click me"
                android:textColor="#4A1A1A"
                android:textAllCaps="false"
                app:backgroundTint="@null"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_colse"
                android:text="Click me"
                android:textAllCaps="false"
                android:textSize="26sp"
                app:backgroundTint="@null" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>